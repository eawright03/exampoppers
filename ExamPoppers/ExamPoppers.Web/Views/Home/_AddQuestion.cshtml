@model ExamPoppers.Model.Question

@using (Html.BeginForm("AddQuestion", "Home", FormMethod.Post))
{ 
<div class="form-group">
    <div class="col-md-2">
        <label>Question:</label>
        @Html.TextBoxFor(m => Model.Content)
    </div>
    <div class="col-md-8">
        <label>Answer 1:</label>
        @Html.TextBoxFor(m => Model.Answer1)
		<label>Answer 2:</label>
		@Html.TextBoxFor(m => Model.Answer2)
		<label>Answer 3:</label>
		@Html.TextBoxFor(m => Model.Answer3)
		<label>Answer 4:</label>
		@Html.TextBoxFor(m => Model.Answer4)
    </div>
	<div class="col-md-8">
		<button type="submit" class="btn btn-default" onclick="">Add Question</button>
	</div>
</div>
}